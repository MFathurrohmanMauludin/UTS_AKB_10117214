<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/txt_kontak"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_contact_phone"
        android:tint="@color/colorPrimary"
        android:contentDescription="@string/txt_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_telepon"
        android:text="@string/txt_telp"
        android:textSize="18sp"
        android:padding="2dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_email"
        android:text="@string/txt_email"
        android:padding="2dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_sosmed"
        android:text="@string/txt_sosmed"
        android:padding="2dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>