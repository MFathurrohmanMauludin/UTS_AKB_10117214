<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    tools:context=".Presenter.UpdateData">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/updateText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textnim"
        android:layout_below="@id/textnim"
        android:autofillHints="@string/inp_nim"
        android:hint="@string/inp_nim"
        android:maxLength="8"
        android:inputType="text" />

        <TextView
            android:id="@+id/textnim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/txt_nim"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/updateText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textnama"
        android:layout_below="@id/textnama"
        android:autofillHints="@string/inp_nama"
        android:hint="@string/inp_nama"
        android:inputType="text" />

        <TextView
            android:id="@+id/textnama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/txt_nama"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/updateText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textkelas"
            android:layout_below="@id/textkelas"
            android:autofillHints="@string/inp_kelas"
            android:hint="@string/inp_kelas"
            android:inputType="text" />

        <TextView
            android:id="@+id/textkelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/txt_kelas"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/updateText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/texttelepon"
            android:layout_below="@id/texttelepon"
            android:autofillHints="@string/inp_telp"
            android:hint="@string/inp_telp"
            android:inputType="phone" />

        <TextView
            android:id="@+id/texttelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/txt_telp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/updateText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textemail"
            android:layout_below="@id/textemail"
            android:autofillHints="@string/inp_email"
            android:hint="@string/inp_email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/txt_email"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/updateText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textsosmed"
            android:layout_below="@id/textsosmed"
            android:autofillHints="@string/inp_sosmed"
            android:hint="@string/inp_sosmed"
            android:inputType="text" />

        <TextView
            android:id="@+id/textsosmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/txt_sosmed"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_update2"
            style="@style/Theme.Design.Light"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:text="@string/txt_kembali"
            android:background="@drawable/custom_button2"
            android:textSize="21sp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/btn_update1"
            style="@style/Theme.Design.Light"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/txt_simpan"
            android:freezesText="true"
            android:textSize="21sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/custom_button1"
            android:layout_gravity="bottom"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>